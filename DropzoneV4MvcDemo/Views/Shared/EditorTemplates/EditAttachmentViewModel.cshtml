@using GdNet.Integrations.DropzoneMvc.Extensions
@using GdNet.Integrations.DropzoneMvc.Resources
@model GdNet.Integrations.DropzoneMvc.Models.EditAttachmentViewModel

<div data-role="edit-attachment-container">
    <div class="form-group">
        <div>
            <p>
                <img src="@FileIconExtensions.GetFileIcon("/Content/fileicons", Model.Icon)" title=""/>
                <a href="@Url.Action("Download", "Attachment", new { Model.Id })">
                    @Model.Name
                </a>
                @Model.Size.FormatByteSize()
                <br />
                @AttachmentResx.CreatedAt @Model.CreatedAt
                @AttachmentResx.CreatedBy @Model.CreatedBy
            </p>
            <a data-toggle="tooltip" data-role="delete" title="@AttachmentResx.Delete" href="#">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
            <a data-toggle="tooltip" data-role="edit" title="@AttachmentResx.Edit" href="#">
                <span class="glyphicon glyphicon-edit"></span>
            </a>
        </div>
    </div>

    <div class="form-group hidden" data-role="details">
        @Html.LabelFor(m => m.Note, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-9">
            @Html.TextAreaFor(m => m.Note, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.IsDeleted)
</div>
